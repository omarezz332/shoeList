<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools">

    <!-- Here we used ScrollView  to support smaller screens and
          landscape mode for most screens -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".view.InstructionsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rules_title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="35sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:text="@string/rules_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </ScrollView>


        <Button
            android:id="@+id/continue_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Continue"
            android:textColor="@color/white" />


</LinearLayout>
</ScrollView>
</layout>